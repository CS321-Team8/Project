{
  "manifest_version": 2,

  "name": "SiteBlocker",
  "version": "1.0.0",
  "description": "Block distracting websites from your browsers",
    "permissions": [
     "webRequestBlocking",
     "declarativeNetRequest",
     "webRequest",
     "activeTab",
     "tabs",
     "<all_urls>",
     "*://*.google.com/",
     "*://*.twitter.com/",
     "http://*/*",
     "https://*/*"],
  
   "background": {
    "scripts": ["js/block_url.js"],
    "persistent": true
  }
}
