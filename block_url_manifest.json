{
  "manifest_version": 2,

  "name": "SiteBlocker",
  "version": "1.0.0",
  "description": "Block distracting websites from your browsers",
  "permissions": ["tabs", "webRequest", "webRequestBlocking", "http://*/*"],
  
  "content_scripts": [{
    "js": ["js/block_url.js"],
    "matches": ["http://*/*", "https://*/*"]
  }],
}
